<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="ChefingApp.Views.BaseLayoutPage"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core" 
            xmlns:local="clr-namespace:ChefingApp.Views"
            android:TabbedPage.ToolbarPlacement="Bottom"
            Style="{StaticResource SideBackgroundStyle}">

    <NavigationPage Title="Home" BarBackground="#75CCFF">
        <x:Arguments>
            <local:HomePage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage  Title="Discovery" BarBackground="#75CCFF">
        <x:Arguments>
            <local:DiscoveryPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Search" BarBackground="#75CCFF" >
        <x:Arguments>
            <local:SearchRecipesPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Favorites" BarBackground="#75CCFF">
        <x:Arguments>
            <local:RecipeDetailsPage />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
